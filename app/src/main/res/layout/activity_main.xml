<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/main_btn_outline"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/menu1"
                android:text="전기차란?"
                android:textSize="30dp"
                android:fontFamily="@font/nanumbarungothicbold"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/main_btn_manage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/menu3"
                android:text="전기차의 장점"
                android:fontFamily="@font/nanumbarungothicbold"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/main_btn_advanteage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/menu2"
                android:text="전기차 관리 TIP"
                android:fontFamily="@font/nanumbarungothicbold"
                android:textSize="30dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/main_btn_addmycar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/menu4"
                android:text="차량 등록"
                android:fontFamily="@font/nanumbarungothicbold"
                android:textSize="30dp"
                android:textColor="@color/white"/>
            <Button
                android:visibility="gone"
                android:id="@+id/move_community"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/co"
                android:text="전기차 커뮤니티"
                android:fontFamily="@font/nanumbarungothicbold"
                android:textSize="30dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7">
        <LinearLayout
            android:id="@+id/btn_gomyinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/linearlayout_input_selector"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/info_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textColor="#7a7a7a"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/move_carslist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/car_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 정보"
                android:textColor="#7a7a7a"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/finder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/search_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전소 찾기"
                android:textColor="#7a7a7a"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/move_mycarmanage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/carmaintenance_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차계부"
                android:textColor="#7a7a7a"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
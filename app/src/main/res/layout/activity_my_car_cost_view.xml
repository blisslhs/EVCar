<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyCarCostView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mycarcost_btn_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/xicon_input_selector"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="37dp">
                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_left_select"/>
                <TextView
                    android:id="@+id/mycarcost_main_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8월 지출내역"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginTop="2dp"/>
                    <Button
                        android:id="@+id/btn_right"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_right_select"/>
                </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8e8e8e"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 자동차"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/txt_mycarname"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="니로"
                android:textSize="18dp"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1.5dp"
            android:background="@drawable/mycarcost_rectangle">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/money"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/total_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100000원"
                    android:textSize="25dp"
                    android:textColor="#ff7300"
                    android:gravity="right"
                    android:layout_margin="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용기간 : "
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/mycar_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2018.08 "/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내 차량 연비 : "
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/mycar_mileage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19.7 "
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mycarcost_rectangle">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="이번달 총 지출 : "
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/total_cost2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100000원"
                android:textSize="17dp"
                android:layout_marginLeft="150dp"
                android:textColor="#ff7300"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용 상세내역"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/mycarcost_rectangle"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="엔진오일 : "
                    android:layout_marginLeft="7dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/oil_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="150000원"
                    android:gravity="right"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/mycarcost_rectangle"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉각수 : "
                    android:layout_marginLeft="7dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/coolant_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="150000원"
                    android:gravity="right"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/mycarcost_rectangle"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="타이어 : "
                    android:layout_marginLeft="7dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/tire_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="150000원"
                    android:gravity="right"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/mycarcost_rectangle"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="와이퍼 : "
                    android:layout_marginLeft="7dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/wiper_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="150000원"
                    android:gravity="right"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/mycarcost_rectangle"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하이패스 : "
                    android:layout_marginLeft="7dp"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/hipass_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="150000원"
                    android:gravity="right"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/mycarcost_rectangle"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="충전 : "
                    android:layout_marginLeft="7dp"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/charge_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="150000원"
                    android:gravity="right"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/mycarcost_rectangle"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번달 총 지출 : "
                    android:layout_marginLeft="7dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/total_cost3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="150000원"
                    android:gravity="right"
                    android:textColor="#ff7300"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7">
        <LinearLayout
            android:id="@+id/btn_gomyinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/linearlayout_input_selector"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/info_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textColor="#7a7a7a"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/move_carslist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/car_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 정보"
                android:textColor="#7a7a7a"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/finder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/search_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전소 찾기"
                android:textColor="#7a7a7a"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/move_mycarmanage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/profiles3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차계부"
                android:textColor="#a8ddf7"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
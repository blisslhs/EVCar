<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="회원정보 수정"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:text="비밀번호 재확인"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/user_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9e9e9e"
            android:text="님의 정보를 안전하게 보호하기 위해 비밀번호를 다시 한번 입력 바랍니다."/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:text="아이디" />
    <TextView
        android:id="@+id/user_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="비밀번호"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/user_pw1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:singleLine="true"/>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_sel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_black_input_selector"
            android:textColor="#ffffff"
            android:text="확인"
            />
        <Button

            android:layout_marginLeft="15dp"
            android:id="@+id/btn_cen"
            android:text="취소"
            android:background="@drawable/login_input_selector"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>



    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/btn_logout"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_black_input_selector"
        android:textColor="#ffffff"
        android:text="로그아웃"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/basic_btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#f7f7f7"
                    android:text="충전기 종류"
                    android:layout_weight="3"/>
                <Button
                    android:id="@+id/basic_btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#f7f7f7"
                    android:text="기본 지식"
                    android:layout_weight="3"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    <Button
                        android:id="@+id/basic_btn_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f7f7f7"
                        android:gravity="center"
                        android:text="주행상황별 작동방식"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#0e0046"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:background="@drawable/frag"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="전기차 주행상황별 작동방식"
                    android:gravity="center"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/frag2png"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전기차 고유의 발진 가속"
                        android:layout_margin="10dp"
                        android:textColor="#0055ff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 전기모터 특유의 우수한 초기\n
 발진 토크로 혼잡한 도심에서\n
 가속력을 높여준다."
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"
                    android:background="#ababab"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회생 제동"
                        android:layout_margin="10dp"
                        android:textColor="#0055ff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="브레이크를 밟으면 모터가 발\n전기로 전환되어 반대로 배터\n리가 충전되는 기능으로 특히 \n제동횟수가 많은 도심에서 주\n행 효울성을 높여준다."
                        android:layout_margin="10dp"
                        android:textSize="13dp"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ababab"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="급속충전"
                        android:layout_margin="10dp"
                        android:textColor="#0055ff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 주행 중 배터리 잔량이 부족할\n
 경우, 공공 충전소를 통해 24\n
 ~33분 내외의 짧은 시간에\n
 급속 충전이 가능하다."
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ababab"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="완석충전 상태에서 예냉/ 예열"
                        android:layout_margin="10dp"
                        android:textColor="#0055ff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="충전기 플러그인 상태에서 공\n조장치를 미리 가동시키면 쾌\n적한 상태로 드라이빙이 가능\n하며, 출발 시 에너지 소비를 \n줄여 주행 거리를 연장하는데 도움이 된다."
                        android:layout_margin="10dp"
                        android:textSize="13dp"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/frag2png2"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarList"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="차량 리스트"
            android:textColor="#8e8e8e"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8e8e8e"/>
        <ListView
            android:id="@+id/carlist_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7">
        <LinearLayout
            android:id="@+id/btn_gomyinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/linearlayout_input_selector"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/info_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:textColor="#7a7a7a"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/move_carslist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/carsearch3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 정보"
                android:textColor="#a8ddf7"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/finder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/search_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전소 찾기"
                android:textColor="#7a7a7a"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/move_mycarmanage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:background="@drawable/linearlayout_input_selector"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/carmaintenance_input_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차계부"
                android:textColor="#7a7a7a"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>